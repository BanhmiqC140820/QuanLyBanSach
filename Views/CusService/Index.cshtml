@model QuanLyBanSach.Models.CustomerService
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@{
    ViewBag.Title = "Trang chủ";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-2">
            <ul class="list-group">
                @foreach (var item in Model.DanhSachLoai)
                {
                    <li class="list-group-item">@Html.ActionLink(@item.tenloai,"")</li>
                }
            </ul>
        </div>
        <div class="d-flex flex-wrap col-sm-8 mt-2">
            @foreach(var item in Model.DanhSachSach) { 
            <div class="card col-12 col-sm-4 col-lg-4 mb-2">
                <div class="card-body d-flex flex-column justify-content-center">
                    <img class="card-img-top" src="~/@item.anh" alt="Card image" style="width:75%; display: block; margin: 0 auto;"/>
                    <div class="card-body text-center">
                        <h4 class="card-title">Tên sách: @item.tensach</h4>
                        <h6 class="card-text"> Tác giả: @item.tacgia</h6>
                        <h4 class="card-text">Giá: @item.gia</h4>
                    </div>
                </div>
            </div>
            }
        </div>
     </div>
  }
 