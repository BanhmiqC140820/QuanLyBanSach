@model QuanLyBanSach.Models.DangNhap

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TenDangNhap, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MatKhau, new { @class = "control-label" })
        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Đăng Nhập" class="btn btn-default" />
    </div>
    if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }
}